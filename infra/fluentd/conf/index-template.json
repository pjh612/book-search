{
  "index_patterns": ["springboot-log-*"],
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "@timestamp": { "type": "date" },
      "level": { "type": "keyword" },
      "logger": { "type": "keyword" },
      "thread": { "type": "keyword" },
      "service": { "type": "keyword" },
      "message": { "type": "text" },
      "traceId": { "type": "keyword" },
      "spanId": { "type": "keyword" }
    }
  }
}